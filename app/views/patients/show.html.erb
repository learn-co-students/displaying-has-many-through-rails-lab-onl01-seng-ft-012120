<h1><%= @patient.name %></h1>

<h3>Appointments: </h3>

<ul>
    <% @patient.appointments.each do |appt| %>
        <li>
            <%= link_to appt.appointment_datetime.strftime("%B %e, %Y at %R"), appointment_path(appt)%> - 
            <%= link_to appt.doctor.name, doctor_path(appt.doctor) %>
        </li>
    <% end %>
</ul>